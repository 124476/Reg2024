<Page x:Class="WorldSkills2024.Pages.NewRech"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldSkills2024.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewRech">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <TextBlock Text="Название:" FontSize="17"></TextBlock>
            <TextBox x:Name="Name" Text="{Binding Name}" FontSize="17"></TextBox>
            <TextBlock Text="Доза:" FontSize="17"></TextBlock>
            <TextBox x:Name="Doza" Text="{Binding Doza}" FontSize="17"></TextBox>
            <TextBlock Text="Формат:" FontSize="17"></TextBlock>
            <TextBox x:Name="Format" Text="{Binding Format}" FontSize="17"></TextBox>
            <Button Name="Save" Content="Добавить" FontSize="17" Click="Save_Click"></Button>
            <Button Name="Back" Content="Отмена" FontSize="17" Click="Back_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
