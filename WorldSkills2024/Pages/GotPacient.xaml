<Page x:Class="WorldSkills2024.Pages.GotPacient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldSkills2024.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GotPacient">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите код пациента:" FontSize="17"></TextBlock>
            <TextBox Name="GotName" FontSize="17"></TextBox>
            <Button Name="Ok" Click="Ok_Click" Content="Найти" FontSize="17"></Button>
            <Button Name="QtOk" Click="QtOk_Click"  Content="Найти по Qr-коду" FontSize="17"></Button>
            <Button Name="No" Click="No_Click"  Content="Отмена" FontSize="17"></Button>
        </StackPanel>
    </Grid>
</Page>
