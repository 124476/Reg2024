<Page x:Class="WorldSkills2024.Pages.MainAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorldSkills2024.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainAdmin">

    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="PacNav" Content="Пациенты" FontSize="17" 
                Height="200" Width="200" Grid.Column="0"
                Click="PacNav_Click" VerticalAlignment="Center"></Button>
        <Button x:Name="RegNav" Content="Расписание" FontSize="17" 
                Height="200" Width="200" Grid.Column="1"
                Click="RegNav_Click" VerticalAlignment="Center"></Button>
        <Button x:Name="GlaNav" Content="Главный доктор" FontSize="17" 
                Height="200" Width="200" Grid.Column="2"
                Click="GlaNav_Click" VerticalAlignment="Center"></Button>
    </Grid>
</Page>
